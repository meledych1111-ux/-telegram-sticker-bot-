{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs24.x",
        "supportsResponseStreaming": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/bot",
      "dest": "/api/bot",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization"
      }
    },
    {
      "src": "/webhook",
      "dest": "/api/webhook.js"
    },
    {
      "src": "/health",
      "dest": "/api/bot?action=health"
    },
    {
      "src": "/admin/?(.*)",
      "dest": "/api/bot?admin=true"
    },
    {
      "src": "/(.*\\.(html|css|js|png|jpg|jpeg|gif|ico|svg))",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ],
  "functions": {
    "api/bot.js": {
      "maxDuration": 60,
      "memory": 3008,
      "runtime": "nodejs24.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
