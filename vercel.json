{
  "version": 2,
  "builds": [
    { "src": "api/bot.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/bot", "dest": "/api/bot.js", "methods": ["GET", "POST", "OPTIONS"] },
    { "src": "/health", "dest": "/api/bot.js", "methods": ["GET"] },
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
