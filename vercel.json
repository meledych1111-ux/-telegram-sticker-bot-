//перезагрузка 
{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs24.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/bot",
      "dest": "/api/bot",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/setup-webhook",
      "dest": "/api/bot",
      "methods": ["GET"]
    },
    {
      "src": "/health",
      "dest": "/api/bot",
      "methods": ["GET"]
    },
    {
      "src": "/",
      "dest": "/api/bot",
      "methods": ["GET"]
    }
  ],
  "functions": {
    "api/bot.js": {
      "maxDuration": 60,
      "memory": 3008
    }
  }
}
