{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs24.x",  // ✅ Node.js 24 доступен!
      "maxDuration": 60,
      "memory": 3008,
      "includeFiles": [
        "fonts/**/*",
        "images/**/*",
        "assets/**/*",
        "node_modules/canvas/build/Release/**/*.node"
      ]
    }
  },
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "@neon_database_url"
  }
}
