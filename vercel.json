{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "24.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/bot",
      "dest": "/api/bot.js",
      "methods": ["POST", "GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/api/bot.js"
    }
  ],
  "functions": {
    "api/bot.js": {
      "maxDuration": 30,
      "memory": 1024,
      "runtime": "nodejs24.x"
    }
  }
}
