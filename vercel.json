{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/check-env.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/bot",
      "dest": "/api/bot.js",
      "methods": ["POST", "GET"]
    },
    {
      "src": "/api/check-env",
      "dest": "/api/check-env.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/api/bot.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
