# ============= TELEGRAM BOT =============
# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# ============= NEON DATABASE =============
# Получите на https://console.neon.tech
# Формат: postgresql://user:password@host.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://user:pass@ep-cool-name-123456.us-east-2.aws.neon.tech/dbname?sslmode=require

# ============= APP SETTINGS =============
# Режим работы: development или production
NODE_ENV=production

# Порт для локального запуска (если нужно)
PORT=3000

# ============= OPTIONAL =============
# Максимальное время обработки (секунды)
MAX_PROCESSING_TIME=10

# Логирование: debug, info, warn, error
LOG_LEVEL=info
