# ============================================
# TELEGRAM STICKER BOT - ENVIRONMENT VARIABLES
# ============================================

# TELEGRAM BOT CONFIGURATION
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username
WEBHOOK_SECRET=generate_random_string_here

# DATABASE CONFIGURATION (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-name.neon.tech/dbname?sslmode=require
DB_POOL_MAX=2
DB_POOL_IDLE_TIMEOUT=10000

# APPLICATION CONFIGURATION
NODE_ENV=production
LOG_LEVEL=info
APP_URL=https://your-project.vercel.app

# ADMINISTRATION
ADMIN_IDS=123456789,987654321
ENABLE_ADMIN_COMMANDS=true

# RATING SYSTEM
RATING_CREATE_STICKER=10
RATING_RECEIVE_LIKE=5
RATING_LOSE_DISLIKE=-2
DAILY_REWARD_RANGE=5-15

# IMAGE PROCESSING
MAX_IMAGE_SIZE_MB=10
STICKER_SIZE=512
PREVIEW_SIZE=200
ENABLE_EFFECTS=true
ENABLE_FRAMES=true
ENABLE_TEXT=true

# CACHE SETTINGS
CACHE_TTL_SECONDS=300
SESSION_TTL_SECONDS=1800

# SECURITY
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# FEATURE TOGGLES
ENABLE_TOP_STICKERS=true
ENABLE_TOP_USERS=true
ENABLE_TRENDING=true
ENABLE_DAILY_REWARDS=true
ENABLE_ACHIEVEMENTS=true
