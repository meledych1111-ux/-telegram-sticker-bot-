#!/usr/bin/env node

// –°–∫—Ä–∏–ø—Ç –¥–ª—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≤–µ–±—Ö—É–∫–∞
const TelegramBot = require('node-telegram-bot-api');

async function setupWebhook() {
  const BOT_TOKEN = process.env.TELEGRAM_BOT_TOKEN;
  const VERCEL_URL = process.env.VERCEL_URL;
  
  if (!BOT_TOKEN) {
    console.error('‚ùå TELEGRAM_BOT_TOKEN –Ω–µ –Ω–∞—Å—Ç—Ä–æ–µ–Ω');
    console.log('\nüìù –ù–∞—Å—Ç—Ä–æ–π–∫–∞:');
    console.log('1. –î–æ–±–∞–≤—å—Ç–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é –≤ Vercel:');
    console.log('   TELEGRAM_BOT_TOKEN = –≤–∞—à_—Ç–æ–∫–µ–Ω_–æ—Ç_BotFather');
    console.log('2. –ü–µ—Ä–µ–¥–µ–ø–ª–æ–π—Ç–µ –ø—Ä–æ–µ–∫—Ç');
    return;
  }
  
  if (!VERCEL_URL) {
    console.error('‚ùå VERCEL_URL –Ω–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω');
    console.log('\n‚ÑπÔ∏è –û–±—ã—á–Ω–æ —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç—Å—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ Vercel');
    return;
  }
  
  const WEBHOOK_URL = `${VERCEL_URL}/api/bot`;
  const bot = new TelegramBot(BOT_TOKEN);
  
  console.log('üîß –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –≤–µ–±—Ö—É–∫–∞ –¥–ª—è Telegram –±–æ—Ç–∞');
  console.log('üåê –î–æ–º–µ–Ω:', VERCEL_URL);
  console.log('üîó –í–µ–±—Ö—É–∫ URL:', WEBHOOK_URL);
  console.log('ü§ñ –¢–æ–∫–µ–Ω:', BOT_TOKEN.substring(0, 10) + '...');
  
  try {
    // –ü–æ–ª—É—á–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –±–æ—Ç–µ
    const botInfo = await bot.getMe();
    console.log('\nüìã –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –±–æ—Ç–µ:');
    console.log('‚Ä¢ –ò–º—è:', botInfo.first_name);
    console.log('‚Ä¢ Username:', '@' + botInfo.username);
    console.log('‚Ä¢ ID:', botInfo.id);
    
    // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –≤–µ–±—Ö—É–∫
    console.log('\nüîÑ –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞—é –≤–µ–±—Ö—É–∫...');
    const result = await bot.setWebHook(WEBHOOK_URL);
    
    if (result) {
      console.log('‚úÖ –í–µ–±—Ö—É–∫ —É—Å–ø–µ—à–Ω–æ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω!');
      
      // –ü—Ä–æ–≤–µ—Ä—è–µ–º –≤–µ–±—Ö—É–∫
      console.log('\nüîç –ü—Ä–æ–≤–µ—Ä—è—é –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≤–µ–±—Ö—É–∫–∞...');
      const webhookInfo = await bot.getWebHookInfo();
      
      console.log('üìä –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –≤–µ–±—Ö—É–∫–µ:');
      console.log('‚Ä¢ URL:', webhookInfo.url || '–ù–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω');
      console.log('‚Ä¢ –û–∂–∏–¥–∞–µ—Ç –æ–±–Ω–æ–≤–ª–µ–Ω–∏–π:', webhookInfo.pending_update_count || 0);
      
      if (webhookInfo.last_error_date) {
        const errorDate = new Date(webhookInfo.last_error_date * 1000);
        console.log('‚Ä¢ –ü–æ—Å–ª–µ–¥–Ω—è—è –æ—à–∏–±–∫–∞:', webhookInfo.last_error_message);
        console.log('‚Ä¢ –î–∞—Ç–∞ –æ—à–∏–±–∫–∏:', errorDate.toLocaleString('ru-RU'));
      } else {
        console.log('‚Ä¢ –ü–æ—Å–ª–µ–¥–Ω—è—è –æ—à–∏–±–∫–∞: –ù–µ—Ç –æ—à–∏–±–æ–∫ ‚úÖ');
      }
      
      console.log('\nüéâ –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞!');
      console.log('\nüì± –¢–µ–ø–µ—Ä—å –≤—ã –º–æ–∂–µ—Ç–µ:');
      console.log('1. –û—Ç–∫—Ä—ã—Ç—å Telegram');
      console.log('2. –ù–∞–π—Ç–∏ –±–æ—Ç–∞: @' + botInfo.username);
      console.log('3. –û—Ç–ø—Ä–∞–≤–∏—Ç—å –∫–æ–º–∞–Ω–¥—É /start');
      console.log('4. –û—Ç–ø—Ä–∞–≤–∏—Ç—å —Ñ–æ—Ç–æ –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è —Å—Ç–∏–∫–µ—Ä–∞');
      
      console.log('\nüîó –ü—Ä—è–º–∞—è —Å—Å—ã–ª–∫–∞ –Ω–∞ –±–æ—Ç–∞:');
      console.log(`https://t.me/${botInfo.username}`);
      
    } else {
      console.error('‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å —É—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –≤–µ–±—Ö—É–∫');
    }
    
  } catch (error) {
    console.error('‚ùå –û—à–∏–±–∫–∞ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≤–µ–±—Ö—É–∫–∞:', error.message);
    console.log('\nüîß –í–æ–∑–º–æ–∂–Ω—ã–µ —Ä–µ—à–µ–Ω–∏—è:');
    console.log('1. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ —Ç–æ–∫–µ–Ω –±–æ—Ç–∞');
    console.log('2. –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ –¥–æ–º–µ–Ω Vercel –¥–æ—Å—Ç—É–ø–µ–Ω');
    console.log('3. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –∏–Ω—Ç–µ—Ä–Ω–µ—Ç —Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ');
  }
}

// –ó–∞–ø—É—Å–∫ —Å–∫—Ä–∏–ø—Ç–∞
if (require.main === module) {
  setupWebhook();
}

module.exports = { setupWebhook };
